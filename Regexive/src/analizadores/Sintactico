        RESULT.agregarElemento(a);
    :}
;

EXPRESION ::=
    punto EXPRESION:a EXPRESION:b 
    {:
        RESULT = "."+a+b;
    :}
    | pleca EXPRESION:a EXPRESION:b 
    {:
        RESULT = "|"+a+b;
    :}
    | asterisco EXPRESION:a 
    {:
        RESULT = "*"+a;
    :}
    | mas EXPRESION:a 
    {:
        RESULT = "+"+a;
    :}
    | interrogacion EXPRESION:a 
    {:
        RESULT = "?"+a;
    :}
    | llaveIzq ID:id llaveDer 
    {:
        RESULT = "{" + id + "}";
    :}
    | CADENA:a 
    {:
